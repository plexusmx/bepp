<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context="bepp.com.bepp.activities.AtencionClienteActivity">


    <ImageView
        android:id="@+id/image_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:src="@mipmap/ilustracion_atencion_cliente"
        android:layout_marginBottom="22dp" />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_below="@+id/image_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/perla"
            android:lineSpacingExtra="-4sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="22dp"
            android:text="¿Tienes alguna duda sobre el uso de la app? Comunícate con nosotros."
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="22dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icono_correo_color"
                android:layout_marginRight="8dp"/>
            <TextView
                style="@style/Texto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="bepp@ejemplo.com"
                android:paddingTop="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="22dp">

            <ImageView
                android:id="@+id/image_contacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icono_contacto_color"
                android:layout_marginRight="8dp"/>
            <TextView
                style="@style/Texto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="55 5555 5555"
                android:paddingTop="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icono_ubicacion_color"
                android:layout_marginRight="8dp"/>
            <TextView
                style="@style/Texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avenida San Fernando 482, Tlalpan Centro I, 14000 CDMX"
                android:paddingTop="2dp"
                />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
