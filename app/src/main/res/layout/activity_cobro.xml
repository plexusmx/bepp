<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context="bepp.com.bepp.activities.ChangePasswordActivity">

    <LinearLayout
        android:id="@+id/layuot_pasos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Paso 5 de 5"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_texto_pagp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layuot_pasos"
        android:paddingTop="6dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="16dp">

    <TextView
        style="@style/AccionesLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos de cobro"
        />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/layout_datos_pagp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_texto_pagp"
        android:background="@drawable/lista_border"
        android:paddingTop="6dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="16dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">


                    <TextView

                        android:id="@+id/txt_nombre_tarjeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minLines="1"

                        android:text="Nombre"
                        android:textColor="@color/pasive_color"

                        android:textColorHint="@color/pasive_color" />
                    <TextView

                        android:id="@+id/txt_num_tarjeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        android:drawableStart="@mipmap/icono_tarjeta"

                        android:inputType="number"
                        android:maxLines="1"
                        android:minLines="1"
                        android:paddingBottom="12dp"


                        android:text="**** **** **** 63476"
                        android:textColor="@color/pasive_color"

                        android:textColorHint="@color/pasive_color" />






                </LinearLayout>

            </LinearLayout>



            <ImageView
                android:id="@+id/image_facturacion_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:src="@mipmap/icono_siguiente" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/layout_datos_pagp"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/perla"
                android:lineSpacingExtra="-2sp"
                android:text="Total de productos"
                />


            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:gravity="end">




                <TextView
                    android:id="@+id/text_productos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:lineSpacingExtra="-4sp"
                    android:textColor="@color/texto"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="2" />


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/perla"
                android:lineSpacingExtra="-2sp"
                android:text="Subtotal"
                />


            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                    android:id="@+id/text_subtotal_sino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:lineSpacingExtra="-4sp"
                    android:textColor="@color/texto"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="$" />


                <TextView
                    android:id="@+id/text_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:lineSpacingExtra="-4sp"
                    android:textColor="@color/texto"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="400.00" />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/perla"
                android:lineSpacingExtra="-2sp"
                android:text="IVA"
                />


            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:gravity="end">




                <TextView
                    android:id="@+id/text_tarjeta_descuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:lineSpacingExtra="-4sp"
                    android:textColor="@color/texto"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="$" />


                <TextView
                    android:id="@+id/text_tarjeta_descuento_signo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:lineSpacingExtra="-4sp"
                    android:textColor="@color/texto"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="64" />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/perla"
                android:lineSpacingExtra="-2sp"
                tools:text="Total"
                />


            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                    style="@style/Precios"
                    android:id="@+id/textDDF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:lineSpacingExtra="-4sp"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    tools:text="$" />


                <TextView
                    style="@style/Precios"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:lineSpacingExtra="-4sp"
                    android:textStyle="normal"
                    android:text="464.00" />


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/siguente_cotizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/bepp"
        android:orientation="horizontal"
        android:gravity="end">


        <TextView
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/blanco"
            android:gravity="end"
            android:text="FINALIZAR"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icono_siguiente_blanco"
            android:layout_gravity="center"/>



    </LinearLayout>






</RelativeLayout>









