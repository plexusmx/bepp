                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_weight="1"
                android:lineSpacingExtra="8sp"
                android:text="Cantidad : "
                android:textColor="@color/verde"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"

                android:textStyle="normal" />

            <TextView
                android:id="@+id/text_cantidad_medicamentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_weight="1"

                android:lineSpacingExtra="8sp"
                android:text="2"
                android:layout_gravity="center_vertical"

                android:textColor="@color/verde"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageVieddwdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout2"
                app:srcCompat="@mipmap/icono_siguiente" />
            </LinearLayout>


        </LinearLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1000"
            app:el_expanded="false">


            <ListView
                android:id="@+id/list_receta_medicamentos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/button_nva_facturacion">


            </ListView>


        </net.cachapa.expandablelayout.ExpandableLayout>



        <Button
            android:id="@+id/btn_cotizar"
            android:layout_width="256dp"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:text="Beppear"
            android:textColor="@color/blanco"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"

