<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blanco"
    android:layout_height="match_parent"
    tools:context="bepp.com.bepp.activities.ResultadoFarmaciasActivity">


    <LinearLayout
        android:id="@+id/layuot_pasos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Paso 3 de 5"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/layuot_pasos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Indicaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A continuación te mostramos en orden la mejor opción para tu compra."/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                >


                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/san_pablo" />




            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                style="@style/FarmaciasMedicamentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farmacia San Pablo"
                android:layout_weight="1"
                />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:gravity="end">

                <TextView
                    style="@style/Precios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    />

                <TextView
                    style="@style/Precios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400.00"
                    />

                </LinearLayout>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageVidf"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@mipmap/start_color_cal" />

                    <ImageView
                        android:id="@+id/imagdfeVdgiew8"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@mipmap/start_color_cal" />
                    <ImageView
                        android:id="@+id/imagdfefggView8"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@mipmap/start_color_cal" />

                    <ImageView
                        android:id="@+id/imfagdfeView8"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@mipmap/start_color_cal" />

                    <ImageView
                        android:id="@+id/imaggfdfeView8"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        app:srcCompat="@mipmap/start_gray_cal" />


                    <TextView
                        style="@style/Indicaciones"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(4)"
                        />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/Texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        />

                    <TextView
                        style="@style/Texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" de "
                        />

                    <TextView
                        style="@style/Texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        />

                    <TextView
                        style="@style/Texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" productos"
                        />




                </LinearLayout>








        </LinearLayout>









        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ver_oferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#4aabe5"
                android:letterSpacing="0.04"
                android:gravity="end"
                android:text="SELECCIONAR"
                />



        </LinearLayout>




    </LinearLayout>
</RelativeLayout>
