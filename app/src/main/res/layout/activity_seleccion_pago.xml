<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bepp.com.bepp.activities.SeleccionPagoActivity">
    <LinearLayout
        android:id="@+id/layuot_pasos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Paso 5 de 6"
            android:textColor="@color/blanco"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/layuot_pasos"
        android:id="@+id/texto_1_lay"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elige tu forma de pago"/>
        <TextView
            style="@style/AccionesLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos de tarjeta"
            />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/layout_tarjeta_cobro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/texto_1_lay"
        android:background="@drawable/lista_border"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/siguente_cotizar_finalizar"
                            android:layout_alignParentStart="true"
                            android:src="@mipmap/icono_tarjeta" />


                        <TextView
                            style="@style/AccionesLista"
                            android:id="@+id/txt_nombre_tarjeta"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Claudia Renteria" />





                    </LinearLayout>

                    <TextView
                        style="@style/Indicaciones"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/txt_num_tarjeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="************63476 " />









                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/text_eddfdfitar_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:src="@mipmap/icono_siguiente" />
        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/btn_cotizar"
        android:layout_width="256dp"
        android:layout_gravity="center"
        android:layout_height="48dp"
        android:layout_below="@+id/layout_editar_pago"
        android:text="+ NUEVO METODO DE PAGO"
        android:textColor="@color/blanco"
        android:background="@drawable/button_bg_rounded_corners"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        />




    <LinearLayout
        android:id="@+id/siguente_cotizar_finalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/bepp"
        android:orientation="horizontal"
        android:gravity="end">


        <TextView
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/blanco"
            android:gravity="end"
            android:text="SIGUIENTE"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icono_siguiente_blanco"
            android:layout_gravity="center"/>



    </LinearLayout>


</RelativeLayout>
