<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/backgroundColorPress"
        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="10">

        <ImageView
            android:id="@+id/trash"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/trash" />

        <TextView
            style="@style/Texto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="¿Borrar Elemento?"
            android:textSize="17sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:background="@drawable/white"
            android:text="Si, Borrar"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_selector"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_gravity="center"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icono_ubicacion_color" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/Texto"
                            android:id="@+id/txt_nombre_direccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Direccion"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/texto_calle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calle : "
                            />
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/txt_calle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre de la calle"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/texto_num_ext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Número exterior : "
                            />
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/txt_num_ext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Número"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/texto_num_interior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Número interior : "
                            />
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/txt_num_interior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Número"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/texto_colonia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Colonia : "
                            />
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/txt_colonia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre de colonia"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/texto_delegacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delegación : "
                            />
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/txt_delegacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delegación"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/texto_estado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado : "
                            />
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/txt_estado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/texto_pais"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="País : "
                            />
                        <TextView
                            style="@style/Indicaciones"
                            android:id="@+id/txt_pais"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="País"
                            />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</com.daimajia.swipe.SwipeLayout>












