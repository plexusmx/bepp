<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:background="@color/blanco"
android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/imagenstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuida tu salud y la de
tu familia"
            style="@style/TTulo" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/texto_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/imagenstore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:src="@mipmap/ornamenta_oraciones"/>



        <TextView
            android:id="@+id/genera_lista"
            style="@style/Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="Consulta y surte tus recetas, también la de tus familiares." />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/texto_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/texto_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:src="@mipmap/ornamenta_oraciones"/>



        <TextView
            android:id="@+id/cotiza_entre"
            style="@style/Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="Consulta tu historial clínico." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/texto_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/texto_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:src="@mipmap/ornamenta_oraciones"/>



        <TextView
            android:id="@+id/beppea_entrega"
            style="@style/Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="Consulta el tablero de Especialidades." />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_above="@+id/imagenstore"
        android:src="@mipmap/ilustracion_usuarios"
        android:layout_marginBottom="36dp"/>



</RelativeLayout>